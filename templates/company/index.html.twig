{% extends 'base.html.twig' %}

{% block title %}Company {% endblock %}

{% block body %}
    <h1>Company </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>PGM</th>
                <th>Phone</th>
                <th>Fix</th>
                <th>Fax</th>
                <th>Adress</th>
                <th>Email</th>
                
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.PGM }}</td>
                <td>{{ company.phone }}</td>
                <td>{{ company.fix }}</td>
                <td>{{ company.fax }}</td>
                <td>{{ company.adress }}</td>
                <td>{{ company.email }}</td>
                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('company_new') }}">Create new</a>
{% endblock %}
